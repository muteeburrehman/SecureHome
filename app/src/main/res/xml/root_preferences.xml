<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Camera Settings">

        <EditTextPreference
            app:key="camera1_url"
            app:title="Camera 1 URL"
            app:summary="Set URL for ESP32-CAM 1 (e.g., http://192.168.1.100:81/stream)"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="camera2_url"
            app:title="Camera 2 URL"
            app:summary="Set URL for ESP32-CAM 2 (e.g., http://192.168.1.101:81/stream)"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>