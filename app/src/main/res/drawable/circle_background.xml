<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>
    </item>

    <!-- Background layer -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:startColor="#CC2196F3"
                android:endColor="#CC1976D2"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"/>
            <size
                android:width="32dp"
                android:height="32dp"/>
        </shape>
    </item>

    <!-- Slight highlight at top -->
    <item
        android:top="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#26FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
            <size
                android:width="30dp"
                android:height="15dp"/>
        </shape>
    </item>
</layer-list>